@model IEnumerable<Models.Producto>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
@using (Html.BeginForm()){
<p>
    Seleccione Tipo: @Html.DropDownList("SelectTipo", "All")
    <input type="submit" value="Filtrar" />
</p>
}


<div class="panel panel-default">
    <div class="panel-heading">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TipoProducto.NombreTipo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cantidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Precio)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.ImagePath)

                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                var claseFila = string.Empty;
                if (!item.Disponible)
                {
                    claseFila = "danger";
                }

                <tr class="@claseFila">
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoProducto.NombreTipo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cantidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>

                    <td>

                        <img src="/Images/@item.ImagePath" height="100" width="100">
                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

